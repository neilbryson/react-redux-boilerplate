{
  "name": "@neilbryson/react-redux-boilerplate",
  "author": "Neil Bryson Cargamento <neilbryson@live.com>",
  "version": "1.1.0",
  "license": "MIT",
  "homepage": "https://github.com/neilbryson/react-redux-boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/neilbryson/react-redux-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "react",
    "react boilerplate",
    "redux",
    "routing",
    "styled components"
  ],
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "~16.6.3",
    "react-dom": "~16.6.3",
    "react-locale-hoc": "~0.2.2",
    "react-redux": "~6.0.0",
    "react-scripts": "~2.1.1",
    "redux": "~4.0.1",
    "redux-first-router": "~2.1.1",
    "styled-components": "^4.1.2"
  },
  "devDependencies": {
    "@neilbryson/eslint-config": "^1.1.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "5.6.0",
    "husky": "^1.1.3",
    "jest-enzyme": "^7.0.1",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "source-map-loader": "~0.2.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/serviceWorker.js"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ]
  },
  "scripts": {
    "analyze": "source-map-loader build/static/js/main.*",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "format": "prettier-eslint --eslint-config-path \".eslintrc\" --print-width 120 --single-quote --write",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "npm run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    ">0.15%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
